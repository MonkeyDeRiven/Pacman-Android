<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtHighscore"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="15dp"
        android:hint="Hier Namen eingeben"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/txtHighscore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="62dp"
        android:text="Sie sind unter den Top 5, tragen Sie ihren Namen ein"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtDialogScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Erzielter Score: "
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txtAteGhosts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDialogScore"
        android:layout_marginTop="3dp"
        android:text="Gegessene Geister: "
        android:textColor="@color/white"
        android:textSize="15dp" />

</RelativeLayout>