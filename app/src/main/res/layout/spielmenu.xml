<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171515"
    tools:context="com.example.pacman_android.spielmenu">

    <TextView
        android:id="@+id/txtSpielmenue"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pacman"
        android:gravity="center_horizontal"
        android:text="Pause"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:textSize="55sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.091" />

    <Button
        android:id="@+id/btnEinstellungenSpielmenue"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/yellow"
        android:text="Einstellungen"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSpielmenue"
        app:layout_constraintVertical_bias="0.2" />

    <Button
        android:id="@+id/btnHilfeSpielmenue"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/yellow"
        android:text="Hilfe"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSpielmenue"
        app:layout_constraintVertical_bias="0.45" />

    <Button
        android:id="@+id/btnVerlassen"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="192dp"
        android:backgroundTint="@color/yellow"
        android:text="Runde beenden"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSpielmenue"
        app:layout_constraintVertical_bias="0.35" />

    <ImageButton
        android:id="@+id/btnExitSpielmenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:srcCompat="@android:drawable/ic_delete"
        app:tint="@color/yellow" />

</androidx.constraintlayout.widget.ConstraintLayout>