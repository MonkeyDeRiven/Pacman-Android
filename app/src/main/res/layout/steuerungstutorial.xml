<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171515"
    android:backgroundTint="#171515"
    tools:context="com.example.pacman_android.steuerungstutorial">

    <TextView
        android:id="@+id/Steuerung"
        android:layout_width="464dp"
        android:layout_height="116dp"

        android:fontFamily="@font/pacman"
        android:gravity="center"
        android:text="Steuerung"
        android:textAlignment="center"
        android:textColor="#FFFF00"
        android:textSize="55sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

    <TextView
        android:id="@+id/right"
        android:layout_width="115dp"
        android:layout_height="39dp"
        android:fontFamily="sans-serif"
        android:text="Rechts"
        android:textAlignment="center"
        android:textColor="#FFFF00"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.704"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.645"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/Unten"
        android:layout_width="103dp"
        android:layout_height="47dp"
        android:fontFamily="sans-serif"
        android:text="Unten"
        android:textAlignment="center"
        android:textColor="#FFFF00"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.956"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/Oben"
        android:layout_width="94dp"
        android:layout_height="40dp"
        android:fontFamily="sans-serif"
        android:text="Oben"
        android:textAlignment="center"
        android:textColor="#FFFF00"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.401"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/Links"
        android:layout_width="94dp"
        android:layout_height="40dp"
        android:fontFamily="sans-serif"
        android:text="Links"
        android:textAlignment="center"
        android:textColor="#FFFF00"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.318"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.644"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/steuerungsbutton"
        android:layout_width="137dp"
        android:layout_height="152dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/Unten"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/steuerungsbuttonhilfe" />

    <ImageButton
        android:id="@+id/btnSteuerungstutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="344dp"
        android:backgroundTint="#171515"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/Steuerung"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/ic_delete"
        app:tint="#FFFF00" />
</androidx.constraintlayout.widget.ConstraintLayout>